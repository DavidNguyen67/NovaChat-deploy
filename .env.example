# Docker
DOCKER_USERNAME=your-dockerhub-username
FRONTEND_IMAGE_TAG=latest
BACKEND_IMAGE_TAG=latest

# Runtime
NODE_ENV=production

# Backend Auth
API_KEY=change-me

# Media
MEDIA_ENDPOINT=https://your-supabase-project.supabase.co/storage/v1/object/public/

# Author info (optional)
AUTHOR_NAME=YourName
AUTHOR_PROFILE=https://github.com/your-username

# Frontend public configs
NEXT_PUBLIC_FETCH_COUNT=30
NEXT_PUBLIC_SOCKET_HOSTNAME=your-domain.com
NEXT_PUBLIC_SOCKET_PORT=8000
NEXT_PUBLIC_SOCKET_PATH=/socketcluster/
NEXT_PUBLIC_SOCKET_SECURE=true

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=ChangeThisStrongMongoPassword123!
MONGO_DATABASE=app_database

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ChangeThisStrongPostgresPassword123!
POSTGRES_DATABASE=app_database

# Redis
REDIS_PASSWORD=ChangeThisStrongRedisPassword123!

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_STORAGE_BUCKET=your-bucket-name

# JWT
JWT_SECRET=your-jwt-secret-min-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-min-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# Throttling
THROTTLE_TTL=60
THROTTLE_LIMIT=10