# ============================================
# FILE: .env.development
# MỤC ĐÍCH: Application services (NextJS + NestJS)
# SỬ DỤNG VỚI: docker-compose.app.yml
# ============================================
DOCKER_USERNAME=your_docker_username

FRONTEND_IMAGE_NAME=nextjs-app
FRONTEND_IMAGE_TAG=latest

BACKEND_IMAGE_NAME=nestjs-app
BACKEND_IMAGE_TAG=latest

NODE_ENV=development

FRONTEND_PORT=3000
BACKEND_PORT=4000

# ==================================================
# FRONTEND CONFIGURATION
# ==================================================
API_KEY=your_api_key_here

PROXY_ENDPOINT=http://nestjs-app:4000
PROXY_API_KEY=your_api_key_here

MEDIA_ENDPOINT=https://your-supabase-project.supabase.co/storage/v1/object/public/

AUTHOR_NAME=YourName
AUTHOR_PROFILE=https://github.com/yourprofile

NEXT_PUBLIC_FETCH_COUNT=30

NEXT_PUBLIC_SOCKET_HOSTNAME=localhost
NEXT_PUBLIC_SOCKET_PORT=8000
NEXT_PUBLIC_SOCKET_PATH=/socketcluster/
NEXT_PUBLIC_SOCKET_SECURE=false

# ==================================================
# BACKEND CONFIGURATION
# ==================================================
POSTGRES_URI=postgresql://postgres:your_strong_postgres_password@postgres:5432/myapp_db

MONGODB_URI=mongodb://admin:your_strong_mongo_password@mongodb:27017/myapp_db?authSource=admin

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_strong_redis_password

JWT_SECRET=your_jwt_secret_at_least_32_characters_long_random_string_abc123xyz789
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_refresh_secret_at_least_32_characters_long_random_string_def456uvw012
JWT_REFRESH_EXPIRES_IN=7d

THROTTLE_TTL=60
THROTTLE_LIMIT=10